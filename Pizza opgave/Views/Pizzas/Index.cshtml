@model IEnumerable<Pizza_opgave.pizzas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a href="/Pizzas/Create" class="btn btn-success"> Create Pizza</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.topping)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.alm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.topping)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.alm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fam)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
